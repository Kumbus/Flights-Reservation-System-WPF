<Page x:Class="Projekt.ThanksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Projekt"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ThanksPage">

    <Page.DataContext>
        <local:ThanksPageViewModel/>
    </Page.DataContext>

    <Border Background="{StaticResource WordOrangeBrush}" CornerRadius="10" Margin="10">
        <Grid>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <StackPanel HorizontalAlignment="Center">
                    <Label Content="Płatność została poprawnie przeprowadzona" Style="{StaticResource BrandText}"/>
                    <Label Content="Dziękujemy za skorzystanie z usługi! ;*" Style="{StaticResource BrandText}"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Page>
